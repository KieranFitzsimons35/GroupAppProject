<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:orientation="vertical"
    android:keepScreenOn="true"
    >

    <View
        android:layout_height="2dip"

        android:layout_marginTop="6dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Switch
            android:id="@+id/switchPauseTimer"
            android:text="Slide on to pause and off to restart sitting timer"
            android:switchPadding="@dimen/activity_horizontal_margin"
            android:textColor="@color/colorPrimary"
            android:showText="false"/>



    </TableRow>

    <View
        android:layout_height="2dip"

        android:layout_marginBottom="@dimen/activity_vertical_margin"/>


  <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:orientation="horizontal">






  </LinearLayout>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chrono"
        android:background="@color/colorPrimary"
        android:textColor="#FFFF"
        android:textSize="12pt"
        android:padding="6dip"
        android:layout_gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/manStandingImage"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/activity_horizontal_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/man_standing_up" />

    <TextView
        android:id="@+id/standingUpMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/you_are_standing_up"
        android:textColor="#FFFF"
        android:textAllCaps="true"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="8pt"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />



        <Button
            android:id="@+id/moreInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/more_info"
            android:padding="@dimen/activity_horizontal_margin"

            />

        <Button
            android:id="@+id/map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/map"

            />

    <TextView
        android:id="@+id/appInstructions1"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:textColor="@color/colorPrimary"
        android:text="@string/AppInstructions1"
        android:gravity="bottom"
        />
    <TextView
        android:id="@+id/appInstructions2"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:textColor="@color/colorPrimary"
        android:text="@string/AppInstructions2"
        android:gravity="bottom"
        />
    <TextView
        android:id="@+id/appInstructions3"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:textColor="@color/colorPrimary"
        android:text="@string/AppInstructions3"
        android:gravity="bottom"
        />









</TableLayout>
